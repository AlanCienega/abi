{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "abi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#methods"
		},
		{
			"name": "constant.numeric.abi",
			"match": "\\b\\d+\\b"
		},
		{
			"name": "variable.name.abi",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.abi",
					"match": "\\b(a|asignale|agregale|quitale)\\b"
				},
				{
					"name": "keyword.function.abi",
					"match": "\\b(fin|bloque|repite)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.abi",
					"begin": "comentario:",
					"end": "$"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.abi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.abi",
					"match": "\\\\."
				}
			]
		},
		"methods": {
			"patterns": [
				{
					"name": "support.function",
					"begin": "muestra|ejecuta:",
					"end": " "
				}
			]
		}
	},
	"scopeName": "source.abi"
}